{
    "plugins": [
        "plugins/markdown",
        "better-docs/component"
    ],
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "better-docs": {
            "name": "My React components"
        }
    },
    "opts": {               
        "destination": "./docs",          
        "recurse": true,
        "tutorials": "./tutorials",
        "readme": "README.md"
    }
}